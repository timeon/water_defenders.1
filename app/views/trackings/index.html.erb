<%- model_class = Tracking -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Usage Tracking" %></h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:area) %></th>
      <th><%= model_class.human_attribute_name(:usage) %></th>
      <th><%= model_class.human_attribute_name(:value) %></th>
      <th><%= model_class.human_attribute_name(:unit) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @trackings.each do |tracking| %>
      <tr>
        <td><%= tracking.id %></td>
        <td><%= tracking.area %></td>
        <td><%= tracking.usage %></td>
        <td><%= tracking.value %></td>
        <td><%= tracking.unit %></td>
        <td><%=l tracking.created_at, format: :long %></td>
        <td>
          <%= link_to tracking_path(tracking), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            Edit
          <%- end -%>
          <%= link_to tracking_path(tracking), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
              Delete 
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_tracking_path,
            :class => 'btn btn-primary' %>
