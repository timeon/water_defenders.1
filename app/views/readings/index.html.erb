<%- model_class = Reading -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Meter Reading" %></h1>
</div>
<table class="table ">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:read_at) %></th>
      <th><%= model_class.human_attribute_name(:value) %></th>
      <th><%= model_class.human_attribute_name(:unit) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @readings.each do |reading| %>
      <tr>
        <td><%= reading.id %></td>
        <td><%= reading.read_at %></td>
        <td><%= reading.value %></td>
        <td><%= reading.unit %></td>
        <td>
          <%= link_to edit_reading_path(reading), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            Edit
          <%- end -%>
          <%= link_to reading_path(reading), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            Delete
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_reading_path,
            :class => 'btn btn-primary' %>
