<div class="row">
  <div class="col-lg-8">
    <table class="table" width="50%">
      <tr>
        <th>Ranking</th>
        <th>Name</th>
        <th>Daily Usage</th>
        <th>Unit</th>
      </tr>
       
        <% i=1 %>

      <% @leaders.each do |user| %>
        <% if user.daily_usage > 0 %>
            <tr>
              <td> <%= i %> </td>
              <td><%= user.masked_username %></td>
              <td><%= (user.daily_mls / User::MLS[@unit.to_sym]).round(2) %></td>
              <td><%= @unit %></td>
            </tr>
            <% i=i+1 %>
         <% end %>
       <% end %>
    </table>
  </div>

  <div class="col-lg-1">
    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Country
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <% User.where.not(country:nil).uniq.pluck(:country).each do |country| %>
          <li><a href="/?country=<%=country%>"><%=ISO3166::Country[country]%></a></li>
        <% end %>  
        <li><a href="/">Worldwide</a></li>
      </ul>
    </div>
  </div>

  <div class="col-lg-2">
    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        State/Province
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <% if @country %>
          <% User.where(country:@country).where.not(state:nil).uniq.pluck(:state).each do |state| %>
            <li><a href="/?state=<%=state%>"> <%=ISO3166::Country[@country].states[state].name%> </a></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="col-lg-1">
    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Zip Code
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <% User.where(country:@country).where.not(zip_code:nil).uniq.pluck(:zip_code).each do |zip_code| %>
          <li><a href="/?zip_code=<%=zip_code%>"><%=zip_code%></a></li>
        <% end %>
      </ul>
    </div>
  </div>

  
</div>

  

